<ul id='people-list'>
  <% @people.each do |person| %>
    <li><%= person.name %> <%= link_to 'Show', person_path(person) %>  <%= link_to 'Edit', edit_person_path(person) %></li>
  <% end %>
</ul>


<%= form_tag({controller: "people", action: "index"}, method: "get", remote: true, id: 'buscar') do %>
  <%= label_tag :q, 'Nombre personaje' %> <br>
  <%= text_field_tag :q, nil, placeholder: 'Busca tu personaje aca' %>
  <%= submit_tag :buscar %>
<% end %> <br>


<h1>Crear personaje</h1>

<h3>Con form_for</h3>

<%= form_for Person.new, url: people_path, remote: true do |f|%>
  Name: <%= f.text_field :name %>
  Email: <%= f.text_field :email %>
  <%= submit_tag %>
<% end %>


<%= link_to :back %> <br>
<%= link_to 'Crear persona', new_person_path %>
