<h1>Tus libros</h1>

<table class="table table-striped">
  <thead>
    <th>#</th>
    <th>Nombre</th>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.id %></td>
        <td><%= link_to book.name, book_path(book) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
